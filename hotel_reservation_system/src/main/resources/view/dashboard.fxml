<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashBoardController"
            prefHeight="400.0" prefWidth="600.0">

    <BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <top>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #eae5d9;">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <Label text="SERENITY GRAND HOTEL" style="-fx-text-fill: #5C4431;">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Customer Info" style="-fx-background-color: transparent; -fx-text-fill: #5C4431; -fx-border-color: #244b49; -fx-border-width: 0 0 2 0;" />
                <Button text="Room Info" style="-fx-background-color: transparent; -fx-text-fill: #5C4431; -fx-padding: 0 0 2 0; -fx-min-width: 100;" HBox.margin="$HBox.margin(0, 15, 0, 15)" />
                <Button graphicTextGap="10.0" minWidth="60.0" style="-fx-background-color: #5C4431; -fx-shape: 'M 10 0 L 0 20 L 20 20 Z';" text="ðŸ‘¤" styleClass="user-icon" />
            </HBox>
        </top>
        <center>
            <VBox spacing="15" style="-fx-background-color: #eae5d9;">
                <padding>
                    <Insets top="30.0" right="50.0" bottom="30.0" left="50.0" />
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Customer Information" style="-fx-text-fill: #5C4431;">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="+ Add New Customer" style="-fx-background-color: #244b49; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20 10 20;" />
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField promptText="Search by Name, ID, or Email..." prefWidth="300" style="-fx-background-color: white; -fx-border-color: #5C4431; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                    <Button text="Search" style="-fx-background-color: #5C4431; -fx-text-fill: white;" />
                    <Region HBox.hgrow="ALWAYS" />
                </HBox>

                <TableView VBox.vgrow="ALWAYS" style="-fx-border-color: #5C4431; -fx-border-width: 1;">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn text="Customer ID" prefWidth="100" />
                        <TableColumn text="Full Name" prefWidth="200" />
                        <TableColumn text="Phone" prefWidth="150" />
                        <TableColumn text="Email" prefWidth="200" />
                        <TableColumn text="Last Stay" prefWidth="100" />
                        <TableColumn text="Actions" prefWidth="150" />
                    </columns>
                    <placeholder>
                        <Label text="No Customer Data Available" />
                    </placeholder>
                </TableView>
            </VBox>
        </center>
    </BorderPane>

</AnchorPane>
